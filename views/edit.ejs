<%- include('partials/header') -%>

<div class="header">
    <h1>Edit Journal</h1>
</div>

<div class="form">

    <form action="/journal/<%= journal._id %>?_method=PUT" method="POST">
        <label for="remember"> <h3> A LITTLE ABOUT TODAY </h3> </label>
        <textarea id="summary" name="journal[summary]"><%= journal.summary %></textarea>

        <label for="remember"> <h3>ONE THING I WANT TO REMEMBER ABOUT TODAY </h3> </label>
        <textarea id="remember" name="journal[remember]"><%= journal.remember %></textarea>

        <label for="grateful"> <h3> TODAY I'M GRATEFUL FOR </h3></label>
        <textarea id="grateful" name="journal[grateful]"><%= journal.grateful %></textarea>

        <label for="image"> <h3> IMAGE </h3></label>
        <textarea id="image" name="journal[image]"><%= journal.image %></textarea>

        <label for="mood"> <h3> MOOD </h3></label>
        <select name="journal[mood]" id="mood">
            <% if ( journal.mood == 'Happy') { %>
                <option selected value="Happy">Happy</option>
                <option value="Sad">Sad</option>
                <option value="Angry">Angry</option>
                <option value="Sick">Sick</option>
                <option value="Okayish">Okayish</option>
            <% } else if ( journal.mood == 'Sad') { %>
                <option value="Happy">Happy</option>
                <option selected value="Sad">Sad</option>
                <option value="Angry">Angry</option>
                <option value="Sick">Sick</option>
                <option value="Okayish">Okayish</option>
            <% } else if ( journal.mood == 'Angry') { %>
                <option value="Happy">Happy</option>
                <option value="Sad">Sad</option>
                <option selected value="Angry">Angry</option>
                <option value="Sick">Sick</option>
                <option value="Okayish">Okayish</option>
            <% } else if ( journal.mood == 'Sick') { %>
                <option value="Happy">Happy</option>
                <option value="Sad">Sad</option>
                <option value="Angry">Angry</option>
                <option selected value="Sick">Sick</option>
                <option value="Okayish">Okayish</option>
            <% } else if ( journal.mood == 'Okayish') { %>
                <option value="Happy">Happy</option>
                <option value="Sad">Sad</option>
                <option value="Angry">Angry</option>
                <option value="Sick">Sick</option>
                <option selected value="Okayish">Okayish</option>
            <% } %>       
        </select>

        <input class="button btn" type="submit">
    </form>
</div>

<%- include('partials/footer') -%>